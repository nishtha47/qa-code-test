{
  "name": "cucumber-playwright-javascript",
  "version": "1.0.0",
  "description": "Cucumber tests with Playwright for ParaBank application",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:api": "cucumber-js --profile api",
    "test:ui": "cucumber-js --profile ui",
    "test:smoke": "cucumber-js --profile smoke",
    "test:parallel": "cucumber-js --parallel 2",
    "test:headless": "HEADLESS=true cucumber-js",
    "test:headed": "HEADLESS=false cucumber-js",
    "test:debug": "HEADLESS=false cucumber-js --tags @debug",
    "clean": "rm -rf reports screenshots",
    "pretest": "npm run clean && mkdir -p reports screenshots",
    "report": "node -e \"console.log('Open reports/cucumber-report.html in browser')\"",
    "report:extent": "node generate-extent-report.js",
    "report:extent-html": "node generate-extent-report.js",
    "test:allure": "cucumber-js --require-module ts-node/register --format @qaflag/allure-cucumberjs",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "keywords": [
    "cucumber",
    "playwright",
    "testing",
    "automation",
    "parabank"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "cucumber-html-reporter": "^7.1.1",
    "dotenv": "^17.2.2",
    "fs-extra": "^11.3.1",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.40.0",
    "puppeteer": "^21.3.8"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/messages": "^29.0.1",
    "@playwright/test": "^1.55.0",
    "@types/axios": "^0.9.36",
    "@types/node": "^20.0.0",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.4.1",
    "multiple-cucumber-html-reporter": "^3.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repository-url"
  }
}
