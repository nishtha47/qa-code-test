{
  "name": "cucumber-playwright-javascript",
  "version": "1.0.0",
  "description": "Cucumber tests with Playwright for ParaBank application",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf reports screenshots",
    "pretest": "npm run clean && mkdir -p reports/screenshots reports/pdf reports/html-report",

    "test": "cucumber-js \"src/features/**/*.feature\" --require \"src/step-definitions/**/*.js\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --format json:reports/cucumber-report.json",

    "test:ui": "cucumber-js --tags @ui --format json:reports/cucumber-report.json",
    "test:api": "cucumber-js --tags @api --format json:reports/cucumber-report.json",
    "test:smoke": "cucumber-js --tags @smoke --format json:reports/cucumber-report.json",

    "test:ui:report": "npm run test:ui && npm run report:html && npm run report:pdf",
    "test:api:report": "npm run test:api && npm run report:html && npm run report:pdf",
    "test:smoke:report": "npm run test:smoke && npm run report:html && npm run report:pdf",
    "test:all": "npm run test:ui && npm run test:api && npm run test:smoke && npm run report:html && npm run report:pdf",

    
    "report:html": "node scripts/generate-html-reporter.js",
    "report:pdf": "node scripts/generate-pdf-reporter.js",

    "test:headless": "HEADLESS=true cucumber-js",
    "test:headed": "HEADLESS=false cucumber-js",
    "test:debug": "HEADLESS=false cucumber-js --tags @debug"
  },
  "keywords": [
    "cucumber",
    "playwright",
    "testing",
    "automation",
    "parabank"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.2",
    "fs-extra": "^11.3.1",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/messages": "^29.0.1",
    "@playwright/test": "^1.55.0",
    "@types/axios": "^0.9.36",
    "@types/node": "^20.0.0",
    "html-pdf": "^3.0.1",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "puppeteer": "^24.20.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repository-url"
  }
}
