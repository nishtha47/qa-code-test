{
  "name": "cucumber-playwright-javascript",
  "version": "1.0.0",
  "description": "Cucumber tests with Playwright for ParaBank application",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf reports screenshots allure-results && mkdir -p reports/screenshots reports/pdf reports/html-report reports/json allure-results",
    "pretest": "npm run clean",
    "test": "cucumber-js \"src/features/**/*.feature\" --require \"src/step-definitions/**/*.js\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --format json:reports/cucumber-report.json --format html:reports/cucumber-report.html",
    "test:ui": "cucumber-js \"src/features/**/*.feature\" --require \"src/step-definitions/**/*.js\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --tags @ui --format json:reports/ui-report.json --format html:reports/ui-report.html",
    "test:api": "cucumber-js \"src/features/**/*.feature\" --require \"src/step-definitions/**/*.js\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --tags @api --format json:reports/api-report.json --format html:reports/api-report.html",
    "test:smoke": "cucumber-js \"src/features/**/*.feature\" --require \"src/step-definitions/**/*.js\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --tags @smoke --format json:reports/smoke-report.json --format html:reports/smoke-report.html",
    "test:ci": "npm run test:api && npm run test:ui && npm run report:html",
    "test:ui:report": "npm run test:ui && npm run report:html && npm run report:pdf",
    "test:api:report": "npm run test:api && npm run report:html && npm run report:pdf",
    "test:smoke:report": "npm run test:smoke && npm run report:html && npm run report:pdf",
    "test:all": "npm run test:api; npm run test:ui; npm run test:smoke; npm run report:html; npm run report:pdf",
    "report:html": "npx multiple-cucumber-html-reporter --reportName 'Parabank Automation Report' --jsonDir reports --reportPath reports/html-report --displayDuration --openReport false --pageTitle 'Test Results'",
    "report:pdf": "node scripts/generate-pdf-reporter.js",
    "report:extent": "node scripts/generate-html-reporter.js",
    "test:headless": "HEADLESS=true npm run test",
    "test:headed": "HEADLESS=false npm run test",
    "test:debug": "HEADLESS=false cucumber-js --tags @debug --format pretty",
    "test:parallel": "cucumber-js --parallel 2",
    "install:browsers": "npx playwright install --with-deps",
    "postinstall": "npm run install:browsers || echo 'Browser installation skipped'",
    "lint": "echo 'Linting not configured'",
    "audit:security": "npm audit --audit-level moderate"
  },
  "keywords": [
    "cucumber",
    "playwright",
    "testing",
    "automation",
    "parabank",
    "jenkins",
    "ci-cd"
  ],
  "author": "QA Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.40.1",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@cucumber/messages": "^24.1.0",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.0",
    "cucumber-html-reporter": "^7.1.0",
    "html-pdf": "^3.0.1",
    "multiple-cucumber-html-reporter": "^3.5.0",
    "puppeteer": "^21.6.1",
    "allure-commandline": "^2.25.0",
    "allure-cucumberjs": "^2.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nishtha47/cucumber-playwright-javascript.git"
  },
  "bugs": {
    "url": "https://github.com/nishtha47/cucumber-playwright-javascript/issues"
  },
  "homepage": "https://github.com/nishtha47/cucumber-playwright-javascript#readme"
}