{
  "name": "cucumber-playwright-javascript",
  "version": "1.0.0",
  "description": "Cucumber tests with Playwright for ParaBank application - Enhanced automation framework",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf reports screenshots allure-results && mkdir -p reports/screenshots reports/pdf reports/html-report reports/json allure-results",
    "pretest": "npm run clean",
    
    "test": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --format json:reports/cucumber-report.json --format html:reports/cucumber-report.html",
    
    "test:ui": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @ui --format json:reports/ui-report.json --format html:reports/ui-report.html",
    
    "test:api": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @api --format json:reports/api-report.json --format html:reports/api-report.html",
    
    "test:smoke": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @smoke --format json:reports/smoke-report.json --format html:reports/smoke-report.html",
    
    "test:regression": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @regression --format json:reports/regression-report.json --format html:reports/regression-report.html",
    
    "test:account-creation": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @account-creation --format json:reports/account-creation-report.json --format html:reports/account-creation-report.html",
    
    "test:fund-transfer": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @fund-transfer --format json:reports/fund-transfer-report.json --format html:reports/fund-transfer-report.html",
    
    "test:bill-payment": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @bill-payment --format json:reports/bill-payment-report.json --format html:reports/bill-payment-report.html",
    
    "test:end-to-end": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @workflow --format json:reports/e2e-report.json --format html:reports/e2e-report.html",
    
    "test:ci": "npm run test:api && npm run test:ui && npm run report:generate",
    
    "test:ui:report": "npm run test:ui && npm run report:generate",
    "test:api:report": "npm run test:api && npm run report:generate",
    "test:smoke:report": "npm run test:smoke && npm run report:generate",
    "test:regression:report": "npm run test:regression && npm run report:generate",
    
    "test:all": "npm run test:api; npm run test:ui; npm run test:smoke; npm run test:regression; npm run report:generate",
    
    "test:sequential": "npm run test:smoke && npm run test:regression && npm run test:ui && npm run report:generate",
    
    "report:generate": "npm run report:html && npm run report:pdf",
    
    "report:html": "multiple-cucumber-html-reporter --reportName 'ParaBank Automation Test Report' --jsonDir reports --reportPath reports/html-report --displayDuration --displayReportTime --openReport false --pageTitle 'ParaBank Test Results' --reportSuiteName 'Banking Application Tests' --customData.title 'Test Environment Information' --customData.data '[{\"label\":\"Application\",\"value\":\"ParaBank\"},{\"label\":\"Environment\",\"value\":\"Test\"},{\"label\":\"Browser\",\"value\":\"Chromium\"},{\"label\":\"Platform\",\"value\":\"Local\"}]'",
    
    "report:pdf": "node scripts/generate-pdf-reporter.js",
    
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    
    "report:extent": "node scripts/generate-html-reporter.js",
    
    "test:headless": "HEADLESS=true npm run test:ui",
    "test:headed": "HEADLESS=false npm run test:ui",
    
    "test:debug": "HEADLESS=false cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @debug --format pretty",
    
    "test:parallel": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --parallel 2",
    
    "test:parallel:ui": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --tags @ui --parallel 3",
    
    "test:failed": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --rerun @rerun.txt",
    
    "test:dry-run": "cucumber-js \"src/features/**/*.feature\" --require \"src/support/world.js\" --require \"src/support/hooks.js\" --require \"src/step-definitions/**/*.js\" --dry-run",
    
    "install:browsers": "playwright install chromium --with-deps",
    "install:all-browsers": "playwright install --with-deps",
    
    "postinstall": "npm run install:browsers || echo 'Browser installation skipped - run npm run install:browsers manually if needed'",
    
    "setup": "npm install && npm run install:browsers && npm run clean",
    
    "validate": "npm run test:dry-run && echo 'All step definitions are implemented'",
    
    "health-check": "node scripts/health-check.js",
    
    "serve:reports": "npx http-server reports/html-report -p 8080 -o",
    
    "lint": "echo 'ESLint not configured - add eslint for code quality checks'",
    "lint:fix": "echo 'ESLint fix not configured'",
    
    "audit:security": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    
    "docker:build": "docker build -t parabank-tests .",
    "docker:run": "docker run --rm parabank-tests npm run test:ci"
  },
  "keywords": [
    "cucumber",
    "playwright",
    "testing",
    "automation",
    "parabank",
    "banking",
    "e2e",
    "ui-testing",
    "api-testing",
    "bdd",
    "javascript",
    "jenkins",
    "ci-cd",
    "test-automation",
    "quality-assurance"
  ],
  "author": {
    "name": "QA Team",
    "email": "qa-team@company.com"
  },
  "license": "MIT",
  "dependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@cucumber/messages": "^24.1.0",
    "playwright": "^1.40.1",
    "@playwright/test": "^1.40.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "moment": "^2.29.4",
    "winston": "^3.11.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "cucumber-html-reporter": "^7.1.0",
    "html-pdf": "^3.0.1",
    "multiple-cucumber-html-reporter": "^3.5.0",
    "puppeteer": "^21.6.1",
    "allure-commandline": "^2.25.0",
    "allure-cucumberjs": "^2.5.0",
    "pdf-lib": "^1.17.1",
    "nodemailer": "^6.9.7",
    "http-server": "^14.1.1",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nishtha47/cucumber-playwright-javascript.git"
  },
  "bugs": {
    "url": "https://github.com/nishtha47/cucumber-playwright-javascript/issues"
  },
  "homepage": "https://github.com/nishtha47/cucumber-playwright-javascript#readme",
  "config": {
    "defaultTimeout": 60000,
    "pageTimeout": 30000,
    "retries": 1,
    "headless": false,
    "browserType": "chromium",
    "baseUrl": "https://parabank.parasoft.com/parabank/"
  },
  "cucumber": {
    "default": {
      "requireModule": ["ts-node/register"],
      "require": [
        "src/support/world.js",
        "src/support/hooks.js",
        "src/step-definitions/**/*.js"
      ],
      "format": [
        "progress-bar",
        "json:reports/cucumber-report.json",
        "html:reports/cucumber-report.html"
      ],
      "formatOptions": {
        "snippetInterface": "async-await"
      },
      "publishQuiet": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 60000
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 11"
  ]
}